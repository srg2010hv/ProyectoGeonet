@model SistemaGeonet.Models.Proveedor
@{
    ViewData["Title"] = "DetalleProveedor";
    Layout = "~/Views/Shared/_LayoutAlmAd.cshtml";
}



<div class="card">
    <div class="card-header">
        <strong> Detalle </strong>

    </div>
    <div class="card-body">


        <dl class="dl-horizontal">
            <div class="form-row">
                <div class="form-group col-md-4">

                    <dt>
                        @Html.DisplayNameFor(model => model.nombre_empresa)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.nombre_empresa)
                    </dd>

                </div>
                <div class="form-group col-md-4">

                    <dt>
                        @Html.DisplayNameFor(model => model.telefono)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.telefono)
                    </dd>

                </div>
                <div class="form-group col-md-4">


                    <dt>
                        @Html.DisplayNameFor(model => model.pais)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.pais)
                    </dd>

                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-4">


                    <dt>
                        @Html.DisplayNameFor(model => model.nombre_contacto)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.nombre_contacto)
                    </dd>

                </div>

                <div class="form-group col-md-4">
                                       
                    <dt>
                        @Html.DisplayNameFor(model => model.email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.email)
                    </dd>

                </div>


                <div class="form-group col-md-4">



                    <dt>
                        @Html.DisplayNameFor(model => model.tipo_documento_identidad)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.tipo_documento_identidad)
                    </dd>

                </div>
            </div>
         

            <div class="form-row">
             
                <div class="form-group col-md-4">

                    <dt>
                        @Html.DisplayNameFor(model => model.nro_documento_identidad)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.nro_documento_identidad )
                    </dd>

                </div>
           

            
                <div class="form-group col-md-8">

                    <dt>
                        @Html.DisplayNameFor(model => model.direccion)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.direccion)
                    </dd>

                </div>
            </div>
            </dl>

    </div>

    <div class="card-footer">
      
        <a asp-action="MenuProveedor" class="btn btn-sm btn-danger">  <i class="fa fa-backward"></i> Volver</a>
    </div>


</div>





<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i>  Catalogo   
                <div class="card-body">
                    <a asp-controller="EquipoProveedor" asp-action="RegistrarEquipoProveedor" asp-route-id=@ViewContext.RouteData.Values["id"]  class="btn btn-success"><i class="fa fa-plus"></i>  Registrar Equipo</a>
                </div>
                <table class="table table-bordered table-striped table-sm" id="tabla">
                    <thead>
                        <tr>
                            <th>
                                Equipo
                            </th>
                            <th>
                                Marca
                            </th>
                            <th>
                                Unidad de Medida
                            </th>

                            <th>
                                Factor Conversion
                            </th>
                            <th>
                                Precio Unit.
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewData["listaEquipoProveedor"] as IEnumerable<SistemaGeonet.Models.EquipoxProveedor>)


                        {


                            <tr>

                                <td>@item.equipo.nombre</td>
                                <td>@item.equipo.marca</td>
                                <td>@item.unidad_medida</td>
                                <td>@item.factor_conversion</td>

                                <td>@item.precio</td>

                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!--/.col-->
</div>
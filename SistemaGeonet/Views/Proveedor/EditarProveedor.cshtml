@model SistemaGeonet.Models.Proveedor

@{
    ViewData["Title"] = "EditarProveedor";
    Layout = "~/Views/Shared/_LayoutAlmAd.cshtml";
}



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    </head>

<style type="text/css">


    .control-label {
        font-weight: bold;
    }
</style>
<body>

    <form asp-action="EditarProveedor">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="idProveedor" />
        <div class="card">
            <div class="card-header">
                <strong> Editar Proveedor</strong>

            </div>
            <div class="card-body">



                <div class="form-row">
                    <div class="form-group col-md-6">


                        <label asp-for="nombre_empresa" class="control-label"></label>
                        <input asp-for="nombre_empresa" class="form-control" />
                        <span asp-validation-for="nombre_empresa" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="telefono" class="control-label"></label>
                        <input asp-for="telefono" class="form-control" />
                        <span asp-validation-for="telefono" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">


                        <label asp-for="nombre_contacto" class="control-label"></label>
                        <input asp-for="nombre_contacto" class="form-control" />
                        <span asp-validation-for="nombre_contacto" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">


                        <label asp-for="email" class="control-label"></label>
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">


                        <label asp-for="pais" class="control-label"></label>
                        <input asp-for="pais" class="form-control" />
                        <span asp-validation-for="pais" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">


                        <label asp-for="tipo_documento_identidad" class="control-label"></label>
                        <input asp-for="tipo_documento_identidad" class="form-control" />
                        <span asp-validation-for="tipo_documento_identidad" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">


                        <label asp-for="nro_documento_identidad" class="control-label"></label>
                        <input asp-for="nro_documento_identidad" class="form-control" />
                        <span asp-validation-for="nro_documento_identidad" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">


                        <label asp-for="direccion" class="control-label"></label>
                        <input asp-for="direccion" class="form-control" />
                        <span asp-validation-for="direccion" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-sm btn-primary"> <i class="fa fa-save"></i> Guardar Cambios</button>
                <a asp-action="MenuProveedor" class="btn btn-sm btn-danger">  <i class="fa fa-backward"></i> Cancelar</a>
            </div>


        </div>
    </form>

    </body>
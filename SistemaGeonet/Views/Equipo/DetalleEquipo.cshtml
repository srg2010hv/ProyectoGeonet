
@model SistemaGeonet.Models.Equipo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



<div class="card">
    <div class="card-header">
        <strong> Detalle    : @Html.DisplayFor(model => model.nombre)    @Html.DisplayFor(model => model.marca) </strong>

    </div>
    <div class="card-body">


        <dl class="dl-horizontal">
            <div class="form-row">
                <div class="form-group col-md-4">

                    <dt>
                        @Html.DisplayNameFor(model => model.codigo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.codigo)
                    </dd>

                </div>
                <div class="form-group col-md-4">

                    <dt>
                        @Html.DisplayNameFor(model => model.descripcion)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.descripcion)
                    </dd>

                </div>


            </div>

            <div class="form-row">
                <div class="form-group col-md-8">


                    <dt>
                        @Html.DisplayNameFor(model => model.imagen)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.imagen)
                    </dd>

                </div>


            </div>

        </dl>

    </div>

    <div class="card-footer">

        <a asp-action="MenuEquipo" class="btn btn-sm btn-danger">  <i class="fa fa-backward"></i> Volver</a>
    </div>


</div>





<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i>  Proveedores
                <div class="card-body">

                </div>
                <table class="table table-bordered table-striped table-sm" id="tabla">
                    <thead>
                        <tr>
                            <th>
                                Proveedor
                            </th>
                            <th>
                                Código
                            </th>
                            <th>
                                Unidad de Medida
                            </th>

                            <th>
                                Factor Conversion
                            </th>
                            <th>
                                Precio Unit.
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewData["listaEquipoProveedores"] as IEnumerable<SistemaGeonet.Models.EquipoxProveedor>)


                        {


                            <tr>

                                <td>@item.proveedor.nombre_empresa</td>
                                <td>@item.codigo_proveedor</td>
                                <td>@item.unidad_medida</td>
                                <td>@item.factor_conversion</td>

                                <td>@item.precio</td>

                            </tr>


                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!--/.col-->
</div>




